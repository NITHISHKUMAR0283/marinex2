# FloatChat Environment Configuration
# Copy this file to .env and configure with your specific values

# Application Settings
ENVIRONMENT=development
DEBUG=true
TESTING=false
APP_NAME=FloatChat
APP_VERSION=1.0.0

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=floatchat
POSTGRES_PASSWORD=floatchat123
POSTGRES_DB=floatchat
POSTGRES_SCHEMA=public
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=floatchat123
REDIS_DB=0
REDIS_SSL=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8501

# AI/ML Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-1106-preview
OPENAI_TEMPERATURE=0.1
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Embedding Configuration
EMBEDDING_MODEL=all-mpnet-base-v2
EMBEDDING_DIMENSION=768

# FAISS Configuration
FAISS_INDEX_TYPE=HNSW
FAISS_HNSW_M=32
FAISS_HNSW_EF=200

# RAG Configuration
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=20
RAG_SCORE_THRESHOLD=0.7

# Data Processing Configuration
ARGO_DATA_PATH=data/argo
ARGO_FTP_SERVER=ftp.ifremer.fr
ARGO_FTP_PATH=/ifremer/argo
MAX_CONCURRENT_FILES=10
NETCDF_CHUNK_SIZE=1000
MEMORY_LIMIT_GB=4.0

# Quality Control Configuration
QUALITY_FLAG_THRESHOLD=3
MISSING_DATA_THRESHOLD=0.8

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/floatchat.log

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Performance Configuration
HEALTH_CHECK_INTERVAL=30